# Use instance profile to authenticate to S3 bucket 
Resources:
  AWSEBAutoScalingGroup:
    Metadata:
      AWS::CloudFormation::Authentication:
        S3Auth:
          type: "s3"
          buckets: ["elasticbeanstalk-us-west-2-596282610570"]
          roleName:
            "Fn::GetOptionSetting":
              Namespace: "aws:autoscaling:launchconfiguration"
              OptionName: "IamInstanceProfile"
              DefaultValue: "aws-elasticbeanstalk-ec2-role"

files:
  # Pull env.config from S3
  /var/app/.env:
    mode: "000440"
    owner: webapp
    group: webapp
    authentication: "S3Auth"
    source: 'https://s3-us-west-2.amazonaws.com/elasticbeanstalk-us-west-2-596282610570/dbp/env'

  # Pull keypair from s3
  /var/app/pub.pem:
    mode: "000440"
    owner: webapp
    group: webapp
    authentication: "S3Auth"
    source: 'https://s3-us-west-2.amazonaws.com/elasticbeanstalk-us-west-2-596282610570/dbp/pub.pem'

  /var/app/priv.pem:
    mode: "000440"
    owner: webapp
    group: webapp
    authentication: "S3Auth"
    source: 'https://s3-us-west-2.amazonaws.com/elasticbeanstalk-us-west-2-596282610570/dbp/priv.pem'

  "/opt/elasticbeanstalk/hooks/appdeploy/enact/01-copy-env.sh":
    mode: "000755"
    content: |
      #!/bin/bash
      cp /var/app/.env /var/app/ondeck/.env

      echo "APP_SERVER_NAME=$(curl http://169.254.169.254/latest/meta-data/instance-id)" >> /var/app/ondeck/.env
      echo "API_URL=$(/opt/elasticbeanstalk/bin/get-config environment -k API_URL)" >> /var/app/ondeck/.env

      chown webapp:webapp /var/app/ondeck/.env
      mkdir -p /var/app/ondeck/storage/app && cp /var/app/{pub,priv}.pem $_
      chown webapp:webapp /var/app/ondeck/storage/app/{pub,priv}.pem
